<%@ taglib uri="http://www.zkoss.org/dsp/zk/core" prefix="z" %>
${z:setCSSCacheControl()}

html {overflow:hidden;}
img { -ms-interpolation-mode:bicubic }
body {
	padding: 0 !important;
}
h4 {
	margin: 0;
	padding: 10px 0;
}
P {
	margin: 0;
	padding: 5px 0;
}
ul {
	margin-top: 5px;
	margin-bottom: 5px;
}
a, a:visited {
	color:#008bb6;
}
ul li	{list-style: url(${c:encodeURL(c:browser('ie6-') ? '/img/z-bullet1.gif' : '/img/Centigrade-Widget-Icons/Bullet-10x10.png')}) disc}
ul ul li	{list-style: url(${c:encodeURL('/img/z-bullet2.gif')}) circle}
ul ul ul li	{list-style: url(${c:encodeURL('/img/z-bullet3.gif')}) square}
.ngdirweb-header .z-north-body {
	background:transparent url(${c:encodeURL( '/img/category-bg.png' )}) repeat-x scroll 0 0;
}
.ngdirweb-categorybar {
	position: relative;
	overflow: hidden;
	${c:browser('ie6-') ? 'float: left;' : ''}
}
.ngdirweb-categorybar-body {
	margin: 0px;
	width: 100%;
	overflow: hidden;
	zoom: 1;
	font-size:14px
}
.ngdirweb-categorybar-body-scroll {
	position: relative;
	margin-left: 20px;
	margin-right: 20px;
}
.ngdirweb-categorybar-right-scroll {
	background-color: transparent;
	background-image: url(${c:encodeURL( '/img/scroll-right.png' )});
	background-repeat: no-repeat;
	background-attachment: scroll;
	background-position: 0 0;
	border-bottom:1px solid ${'#8DB2E3' };
	cursor:pointer;
	position:absolute;
	right:0;
	top:37px;
	width:18px;
	z-index:10;
	height:25px;
}
.ngdirweb-categorybar-right-scroll:hover {
	background-position:-18px 0;
}
.ngdirweb-categorybar-left-scroll {
	background-color: transparent;
	background-image: url(${c:encodeURL(  '/img/scroll-left.png' )});
	background-repeat: no-repeat;
	background-attachment: scroll;
	background-position: -18px 0;
	border-bottom:1px solid ${'#8DB2E3' };
	cursor:pointer;
	left:0;
	position:absolute;
	top:37px;
	width:18px;
	z-index:10;
	height:25px;
}
.ngdirweb-categorybar-left-scroll:hover {
	background-position:0px 0;
}
.ngdirweb-seld {
	background:transparent url(${c:encodeURL( '/img/category-seld.png' )}) no-repeat scroll 0 0;
}
.ngdirweb-over.ngdirweb-seld {
	background:transparent url(${c:encodeURL( '/img/category-over-seld.png' )}) no-repeat scroll 0 0;
}
.ngdirweb-over {
	background:transparent url(${c:encodeURL( '/img/category-over.png' )}) no-repeat scroll 0 0;
}
.ngdirweb-search-inp {
    padding: 2px 0 1px 18px;
	background: white url(${c:encodeURL(c:browser('ie6-') ? '/img/search.gif' : '/img/search.gif')}) no-repeat scroll 0 0;
}
.ngdirweb-category {
	margin-top: 14px; float:left; height: 80px; width: 90px;
	text-align:center;
	cursor: pointer;
}
.ngdirweb-category-img {
	width: 48px;
	height: 48px;
}
.ngdirweb-category-text {
	color: #1c5178; font-size:15px
}
.ngdirweb-logo {
	padding: 10px 10px 0 10px;
	float:left;
}
div.ngdirweb-items {
	border: 0; background: white;font-size:14px;
}
.ngdirweb-items .z-listbox-body {
	overflow-x: hidden;
}
.ngdirweb-items .z-listcell-cnt img {
	width:24px;
	height:24px;
}
.ngdirweb-items .z-listcell-cnt {
	padding-left: 5px;
}
.ngdirweb-main-cnt {
	padding-left: 14px;
}
.ngdirweb-main-desc {
	padding-bottom: 14px;
}
.pointer {
	cursor:pointer;
}
.edition-field, .edition-field:visited {
	color: #346B93;
	text-decoration: none;
	font-style: italic;
	font-size:14px;
}
a.edition-field:hover {
	text-decoration: underline;
}